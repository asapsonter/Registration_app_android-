<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_50sdp"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/tv_heading_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/exo2_regular"
            android:text="@string/app_name_trademark"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_heading_top">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_75sdp"
                    android:src="@drawable/ic_baseline_search_24"
                    app:layout_constraintBottom_toBottomOf="@id/et_search"
                    app:layout_constraintEnd_toEndOf="@id/et_search"
                    app:layout_constraintStart_toStartOf="@id/et_search"
                    app:layout_constraintTop_toTopOf="@id/et_search" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/search"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_graph"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_135sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_search">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_10sdp">


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/graph_line"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_minus15sdp"
                    app:layout_constraintBottom_toTopOf="@id/view_horizontal_line"
                    app:layout_constraintEnd_toEndOf="@id/tv_horizontal_7"
                    app:layout_constraintStart_toEndOf="@id/view_line_vertical"
                    app:layout_constraintTop_toTopOf="@id/view_line_vertical"
                    app:s_gradient_line="true"
                    app:s_line_color="#fed32c"
                    android:elevation="0dp"
                    app:s_line_second_color="#00BCD4"
                    app:s_line_thickness="@dimen/_4sdp"
                    app:s_marker_background_color="#fed32c"
                    app:s_marker_width="@dimen/_9sdp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_5sdp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/view_horizontal_line"
                    app:layout_constraintEnd_toEndOf="@id/view_horizontal_line"
                    app:layout_constraintStart_toEndOf="@id/view_line_vertical"
                    app:layout_constraintTop_toTopOf="@id/view_horizontal_line" />

                <View
                    android:id="@+id/view_time_line"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="#E6979A9C"
                    app:layout_constraintBottom_toBottomOf="@id/view_horizontal_line"
                    app:layout_constraintEnd_toEndOf="@id/tv_horizontal_6"
                    app:layout_constraintStart_toStartOf="@id/tv_horizontal_6" />

                <TextView
                    android:id="@+id/tv_vertical_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="COLOR\nTEMPERATURE (K)"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintBottom_toTopOf="@id/view_line_vertical"
                    app:layout_constraintStart_toStartOf="@id/tv_vertical_1" />

                <View
                    android:id="@+id/view_line_vertical"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="#E6979A9C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_vertical_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:text="6500"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toStartOf="@id/view_line_vertical"
                    app:layout_constraintTop_toTopOf="@id/view_line_vertical" />

                <TextView
                    android:id="@+id/tv_vertical_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:text="5000"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintBottom_toTopOf="@id/tv_vertical_3"
                    app:layout_constraintEnd_toStartOf="@id/view_line_vertical"
                    app:layout_constraintTop_toBottomOf="@id/tv_vertical_1" />

                <TextView
                    android:id="@+id/tv_vertical_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:text="4000"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintBottom_toTopOf="@id/tv_vertical_4"
                    app:layout_constraintEnd_toStartOf="@id/view_line_vertical"
                    app:layout_constraintTop_toBottomOf="@id/tv_vertical_2" />

                <TextView
                    android:id="@+id/tv_vertical_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:text="3000"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintBottom_toTopOf="@id/tv_vertical_5"
                    app:layout_constraintEnd_toStartOf="@id/view_line_vertical"
                    app:layout_constraintTop_toBottomOf="@id/tv_vertical_3" />

                <TextView
                    android:id="@+id/tv_vertical_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:text="2700"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintBottom_toBottomOf="@id/view_line_vertical"
                    app:layout_constraintEnd_toStartOf="@id/view_line_vertical" />

                <View
                    android:id="@+id/view_horizontal_line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="#E6979A9C"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/view_line_vertical"
                    app:layout_constraintTop_toBottomOf="@id/view_line_vertical" />

                <TextView
                    android:id="@+id/tv_horizontal_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="6:00"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintStart_toStartOf="@id/view_horizontal_line"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_line" />

                <TextView
                    android:id="@+id/tv_horizontal_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="8:00"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toStartOf="@id/tv_horizontal_3"
                    app:layout_constraintStart_toEndOf="@id/tv_horizontal_1"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_line" />

                <TextView
                    android:id="@+id/tv_horizontal_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="10:00"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toStartOf="@id/tv_horizontal_4"
                    app:layout_constraintStart_toEndOf="@id/tv_horizontal_2"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_line" />

                <TextView
                    android:id="@+id/tv_horizontal_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="12:00"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toStartOf="@id/tv_horizontal_5"
                    app:layout_constraintStart_toEndOf="@id/tv_horizontal_3"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_line" />

                <TextView
                    android:id="@+id/tv_horizontal_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="14:00"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toStartOf="@id/tv_horizontal_6"
                    app:layout_constraintStart_toEndOf="@id/tv_horizontal_4"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_line" />

                <TextView
                    android:id="@+id/tv_horizontal_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="16:00"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toStartOf="@id/tv_horizontal_7"
                    app:layout_constraintStart_toEndOf="@id/tv_horizontal_5"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_line" />

                <TextView
                    android:id="@+id/tv_horizontal_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:text="18:00"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toEndOf="@id/view_horizontal_line"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_line" />

                <TextView
                    android:id="@+id/tv_horizontal_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="TIME (h)"
                    android:textColor="#979A9C"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintStart_toEndOf="@id/tv_horizontal_7"
                    app:layout_constraintTop_toBottomOf="@id/view_horizontal_line" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_work_active_mode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_graph">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/exo2_regular"
                    android:text="@string/work_active_mode"
                    android:textColor="#333333"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/switch_workactiv_mode"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:sb_background="#dddddd"
                    app:sb_border_width="2dp"
                    app:sb_checked="true"
                    app:sb_checked_color="#0084e6"
                    app:sb_checkline_color="@android:color/transparent"
                    app:sb_show_indicator="false"
                    app:switchMinWidth="20dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_work_mode_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/exo2_extralight"
            android:text="@string/work_active_mode_desc"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="@id/cv_work_active_mode"
            app:layout_constraintStart_toStartOf="@id/cv_work_active_mode"
            app:layout_constraintTop_toBottomOf="@id/cv_work_active_mode" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_boost_mode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_work_mode_desc">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/exo2_regular"
                    android:text="@string/boost_mode"
                    android:textColor="#333333"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/switch_boost_mode"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:sb_background="#dddddd"
                    app:sb_border_width="2dp"
                    app:sb_checked_color="#0084e6"
                    app:sb_checkline_color="@android:color/transparent"
                    app:sb_show_indicator="false"
                    app:switchMinWidth="20dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_boost_mode_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="4.5dp"
            android:fontFamily="@font/exo2_extralight"
            android:text="@string/boost_mode_desc"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="@id/cv_boost_mode"
            app:layout_constraintStart_toStartOf="@id/cv_boost_mode"
            app:layout_constraintTop_toBottomOf="@id/cv_boost_mode" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_comfort_mode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_boost_mode_desc">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/exo2_regular"
                    android:text="@string/comfort_mode"
                    android:textColor="#333333"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/switch_comfort_mode"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:sb_background="#dddddd"
                    app:sb_border_width="2dp"
                    app:sb_checked_color="#0084e6"
                    app:sb_checkline_color="@android:color/transparent"
                    app:sb_show_indicator="false"
                    app:switchMinWidth="20dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="4.5dp"
            android:fontFamily="@font/exo2_extralight"
            android:text="@string/comfort_mode_desc"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="@id/cv_comfort_mode"
            app:layout_constraintStart_toStartOf="@id/cv_comfort_mode"
            app:layout_constraintTop_toBottomOf="@id/cv_comfort_mode" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
